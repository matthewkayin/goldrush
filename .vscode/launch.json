{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run 1 instance",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [
                "--resolution",
                "960x540"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
            "osx": {
                "MIMode": "lldb",
                "targetArchitecture": "arm64",
