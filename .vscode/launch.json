{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run 1 instance",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [],
            "cwd": "${workspaceFolder}/bin",
            "windows": {
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
        },
        {
            "name": "player1",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [
                "--logfile",
                "player1.log",
                "--replay-file",
                "player1.rep"
            ],
            "cwd": "${workspaceFolder}/bin",
            "windows": {
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
        },
        {
            "name": "player2",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [
                "--logfile",
                "player2.log",
                "--replay-file",
                "player2.rep"
            ],
            "cwd": "${workspaceFolder}/bin",
            "windows": {
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
        },
        {
            "name": "Run Test Host",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [
                "--test",
                "host",
                "--logfile",
                "host.log"
            ],
            "cwd": "${workspaceFolder}/bin",
            "windows": {
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
        },
        {
            "name": "Run Test Join",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gold",
            "args": [
                "--test",
                "join",
                "--logfile",
                "join.log"
            ],
            "cwd": "${workspaceFolder}/bin",
            "windows": {
                "program": "${workspaceFolder}/bin/gold.exe",
                "console": "integratedTerminal"
            },
        }
    ],
    "compounds": [
        {
            "name": "Run 2 instances",
            "configurations": ["player1", "player2"],
            "stopAll": true
        },
        {
            "name": "Run Both Test Hosts",
            "configurations": ["Run Test Host", "Run Test Join"],
            "stopAll": true
        }
    ]
}