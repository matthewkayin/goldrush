{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "build.bat"
            },
            "osx": {
                "command": "build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/game"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Clean Everything",
            "windows": {
                "command": "build.bat clean"
            },
            "osx": {
                "command": "build.sh clean"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}